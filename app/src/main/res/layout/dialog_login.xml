<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/master_mind_back"
    android:orientation="vertical">

    <EditText
        android:id="@+id/login_et_Mail"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:padding="4dp"
        android:textColorHint="@color/colorTWhite"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/login_et_Pass"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="5dp"
        android:padding="4dp"
        android:textColorHint="@color/colorTWhite"
        android:hint="Password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/main_design"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClickLogin"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/login_btn_dismiss"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/main_design"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClickDismiss"
            android:text="Dismiss"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>