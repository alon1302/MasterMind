<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullRow">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_margin="4dp"
        android:background="@drawable/transparent_design"
        android:orientation="horizontal"
        android:padding="1.5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/game_0"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="1.5dp"
            android:src="@color/colorWhite"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/game_1"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="1.5dp"
            android:src="@color/colorWhite"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/game_2"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="1.5dp"
            android:src="@color/colorWhite"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/game_3"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="1.5dp"
            android:src="@color/colorWhite"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_margin="4dp"
        android:background="@drawable/transparent_design"
        android:orientation="vertical"
        android:padding="1.5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/check_1"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="1.5dp"
                android:src="@color/colorWhite"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/check_0"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="1.5dp"
                android:src="@color/colorWhite"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/check_3"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="1.5dp"
                android:src="@color/colorWhite"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/check_2"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="1.5dp"
                android:src="@color/colorWhite"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="1dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>