<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_design"
    android:backgroundTint="@color/colorTWhite"
    android:backgroundTintMode="src_over"
    android:padding="12dp"
    android:scrollbarSize="40dp">

    <TextView
        android:id="@+id/textView_coinsGetTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:shadowColor="#000000"
        android:text="coins"
        android:textColor="@color/colorCoins"
        android:textColorHighlight="#000000"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView6"
        app:layout_constraintStart_toEndOf="@+id/circleImageView6"
        app:layout_constraintTop_toTopOf="@+id/circleImageView6"
        app:layout_constraintVertical_bias="0.45" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/game_design"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView6">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/red"
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:layout_margin="1.5dp"
            android:src="@color/colorRed"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/green"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="1.5dp"
            android:src="@color/colorGreen"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/blue"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="1.5dp"
            android:src="@color/colorBlue"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/orange"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="1.5dp"
            android:src="@color/colorOrange"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/yellow"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="1.5dp"
            android:src="@color/colorYellow"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/light"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="1.5dp"
            android:src="@color/colorLight"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Buy This Theme - "
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="1500 Coins"
        android:textColor="@color/colorCoins"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <Button
        android:id="@+id/buyHintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_design"
        android:text="Buy"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.619" />
</androidx.constraintlayout.widget.ConstraintLayout>