<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/master_mind_back"
    android:orientation="vertical">


    <EditText
        android:id="@+id/register_et_Name"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:padding="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="5dp"
        android:textColorHint="@color/colorTWhite"
        android:hint="Name" />

    <EditText
        android:id="@+id/register_et_Mail"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:padding="4dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="5dp"
        android:textColorHint="@color/colorTWhite"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/register_et_Pass"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:padding="4dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="5dp"
        android:hint="Password"
        android:textColorHint="@color/colorTWhite"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_et_conPass"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:padding="4dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="5dp"
        android:hint="Confirm Password"
        android:textColorHint="@color/colorTWhite"
        android:inputType="textPassword" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_iv_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/colorBlue"
        app:civ_border_width="0.2dp"
        app:civ_circle_background_color="#995C5C5C" />

    <Button
        android:id="@+id/register_btn_chooseImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_design"
        android:backgroundTint="@color/colorAccent"
        android:onClick="openGallery"
        android:padding="10dp"
        android:text="Choose Image"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/main_design"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClickRegister"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/register_btn_dismiss"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/main_design"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClickDismiss"
            android:text="Dismiss"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>